<html>
    
    
    <form action="/Main/updated" method="post">
        <input type="hidden" value="<%=data.supplierid%>" name="supplierid">


    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Sedan+SC&display=swap" rel="stylesheet">
    </head>

    

<style>       

    .usedfont {
        font-family: "Sedan SC", serif;
        font-weight: 400;
        font-style: normal;
        font-size: 35px;
        
        font-weight: bold;
        /* color: #000; */
        /* background-color: #303245; */
        color: rgb(34, 12, 64, 0.8);
        border-radius: 20px;
        height: auto;
        width: 70%;
    }

    

    .maincontainer {
        background: rgb(63,94,251);
        background: radial-gradient(circle, rgba(63,94,251,1) 0%, rgba(252,70,107,1) 100%);        /* background: #656262; */
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .box {
        /* background:  #ffffff; */
        background: rgb(255,57,144);
        background: radial-gradient(circle, rgba(255,57,144,1) 0%, rgba(131,188,255,1) 100%);
        width: 55%;
        height: auto;
        padding: 11px;
        border-radius: 20px;
        box-shadow: 0 0 15px 1px rgba(0, 0, 0, 0.6);
    }

    .btncenter{

        display: flex;
        justify-content: center;
        justify-items: center;
        align-items: center;
        align-content: center;
        width: 50%;
    }
</style>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="/javascripts/project.js"></script>
    
</head>

<div class="maincontainer">
    <div class="box">
    
        <div  style="display: flex; flex-direction:row; align-items: center;">
            <div class="usedfont" style="font-weight: bold; font-size:xx-large;">
                <img src="/images/logo1.png"  width="20%" height="auto">  UPDATE DETAILS
            </div>
            <div style="margin-left: auto;">
                <a href="/Main/show"><img src="/images/icon1.png" style="height: 50px; width: 50px; "></a>
            </div>
        </div>

        <div class="row">
            
                <div class="col-lg-4 col-sm-12 col-xs-12" style="margin-top: 30px;">
                    <select class="form-select usedfont" id="stateid" name="stateid" >
                        <option value= <%=data.stateid%> selected><%=data.statename%></option>


                       
                    </select>
                </div>

                <div class="col-lg-4 col-sm-12 col-xs-12" style="margin-top: 30px;">
                    <select class="form-select usedfont" id="cityid" name="cityid" >
                        <option value= <%=data.cityid%> selected><%=data.cityname%></option>


    
                    </select>
                </div>

                <div class="col-lg-4 col-sm-12 col-xs-12" style="margin-top: 30px;">
                    <input type="text" class="form-control usedfont" name="suppliername"  id="suppliername" value="<%=data.suppliername%>" placeholder="<%=data.suppliername%>">
                </div>

        </div>

        <div class="row" style="margin-top: 10px;">

            <div class="col-lg-12 col-sm-12 col-xs-12 " >
                <textarea  placeholder="<%=data.address%>" class="form-control usedfont" name="address" id="address" rows="3" ></textarea>
            </div>

        </div>

        <!-- <div class="row" style="margin-top: 10px;">

            <div class="col-lg-12 col-sm-12 col-xs-12">
                <textarea placeholder="Description" class="form-control usedfont" name="description" id="description" rows="3" ></textarea>
            </div>

        </div> -->

        <div class="row" >

        <div class="col-lg-4 col-sm-12 col-xs-12" style="margin-top: 10px;">
            <input type="text" class="form-control usedfont" name="dueamount" id="dueamount" value=<%=data.dueamount%> placeholder="<%=data.dueamount%>" >
        </div>

        <div class="col-lg-4 col-sm-12 col-xs-12" style="margin-top: 10px;">
            <input type="text" class="form-control usedfont" name="advance" id="advance" value=<%=data.advance%> placeholder="<%=data.advance%>" >
        </div>

        <div class="col-lg-4 col-sm-12 col-xs-12" style="margin-top: 10px;">
            <input type="date" class="form-control usedfont" name="advancedate" id="advancedate" value="<%=data.advancedate%>" >
        </div>
        
        </div>

    

    <div class="row">

        <%
        var pr = data.products
        %>


        <div class="col-lg-12 col-sm-12 col-xs-12" style="margin-top: 20px; display: flex; justify-content: center; align-items: center;" >

            <div style="margin-right: 10px;">
                <font face="Sedan" ><b>PRODUCTS : </b></font> 
            </div>

            <div class="form-check form-check-inline">
                <input class="form-check-input" <% if(pr.includes('CEMENT')) {%> checked <%}%> type="checkbox" name="products" id="products1" value="CEMENT">
                <label class="form-check-label" for="veg"><font face="serif" color="#000">CEMENT</font></label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" <% if(pr.includes('IRON RODS')) {%> checked <%}%> type="checkbox" name="products" id="products2" value="IRON RODS">
                <label class="form-check-label" for="veg"><font face="serif" color="#000">IRON RODS</font></label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" <% if(pr.includes('BRICKS')) {%> checked <%}%> type="checkbox" name="products" id="products3" value="BRICKS">
                <label class="form-check-label" for="veg"><font face="serif" color="#000">BRICKS</font></label>
            </div>


        </div>
    </div>

    <div class="row">

            <div class="col-lg-12 col-sm-12 col-xs-12" style="margin-top: 20px;">
            
                <input type="text" class="form-control usedfont" name="firmname"  id="firmname" value="<%=data.firmname%>"  placeholder="<%=data.firmname%>">   

            </div>

    </div>

    
           

        

        <div class="row" >

            <div class="col-lg-6 col-sm-12 col-xs-12 btncenter usedfont" style="margin-top: 40px;">
                <button type="submit" class="btn btn-primary btncenter "><font color="#fff">EDIT</font></button>
            </div>

            <div class="col-lg-6 col-sm-12 col-xs-12 btncenter usedfont" style="margin-top: 40px;">
                <button type="submit" class="btn btn-primary btncenter "><font  color="#fff">DELETE</font></button>
            </div>

        </div>

        <div class="row" >

            <div class="col-lg-12 col-sm-12 col-xs-12 btncenter" style="margin-top: 40px; color:rgb(34, 12, 64, 0.7) ;">
               <b><%=message %></b>
            </div>

        </div>
        



         

       
        



    </div>
</div>

</form>
    

</html>